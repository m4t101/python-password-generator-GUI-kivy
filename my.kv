#:kivy 1.11.1
<CenteredTextInput@TextInput>:
    multiline: False
    on_text: root.update_padding()
    padding_x: (self.width - self.text_width) / 2

<MyGrid>

    amount: characters
    lbl: screen
    copied: copied

    GridLayout:
        id: layout
        cols: 1
        size: root.width, root.height
        
        GridLayout:
            cols: 2
            
            Label:
                text: "Amount of [b]Characters[/b]:"
                font_size: '18pt'
                markup: True
                color: 'FFCCEE'
                
                

            TextInput:
                multiline: False
                id: characters
                hint_text: "Enter the amount of characters"
                font_size: '18pt'
                
        GridLayout:
            cols: 4
            Label:
                text: "Include Lower:"
                align: "left"
            CheckBox:
                active: True
                on_active: root.lower = not root.lower

            Label:
                text: "Include Upper:"
            CheckBox:
                active: True
                on_active: root.upper = not root.upper

            Label:
                text: "Include Digits:"
            CheckBox:
                active: True
                on_active: root.digit = not root.digit

            Label:
                text: "Include Special Characters:"
            CheckBox:
                active: True
                on_active: root.special = not root.special

        GridLayout:
            cols: 2
            Button:
                text: "Submit"
                on_press: root.signal()
            Button:
                text: "Copy to Clipboard"
                on_press: root.copy()
            Label:
                id: screen
            Label:
                id: copied
